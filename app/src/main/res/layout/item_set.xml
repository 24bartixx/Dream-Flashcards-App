<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"

        android:paddingTop="12dp">

        <TextView
            android:id="@+id/set_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/set_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Top G"
            style="@style/TextAppearance.MaterialComponents.Body2"/>

        <TextView
            android:id="@+id/words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"

            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/words_text"
            app:layout_constraintTop_toBottomOf="@id/set_name"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextAppearance.MaterialComponents.Body2"/>

        <TextView
            android:id="@+id/words_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"

            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/words"
            app:layout_constraintTop_toBottomOf="@id/set_name"
            tools:text="46/214"
            style="@style/TextAppearance.MaterialComponents.Body2"/>

        <ImageView
            android:id="@+id/set_icon"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/black"
            tools:srcCompat="@drawable/english_icon"
            app:layout_constraintTop_toTopOf="@id/set_name"
            app:layout_constraintBottom_toBottomOf="@id/words_count"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/color_view"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            android:background="?attr/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/words" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>