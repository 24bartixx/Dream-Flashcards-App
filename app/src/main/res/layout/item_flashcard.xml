<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
>

        <View
            android:id="@+id/left_background"
            android:layout_width="56dp"
            android:layout_height="0dp"
            android:background="#F2F2F2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/left_divider"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="?attr/colorSecondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/left_background"/>

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/left_background"
            app:layout_constraintEnd_toEndOf="@id/left_background"
            app:layout_constraintTop_toTopOf="@id/left_background"
            app:layout_constraintBottom_toBottomOf="@id/left_background"
            tools:srcCompat="@drawable/ic_learned"/>

        <TextView
            android:id="@+id/term"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/left_divider"
            app:layout_constraintEnd_toStartOf="@id/flashcards_options"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Termhb jnkj jj ijj khhbhjbhj, iuhi"
            style="@style/TextAppearance.MaterialComponents.Body2"/>

        <TextView
            android:id="@+id/definition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/term"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/left_divider"
            app:layout_constraintEnd_toStartOf="@id/flashcards_options"
            tools:text="Siuuu Vamos I'm createing an app and I will succeed"
            style="@style/TextAppearance.MaterialComponents.Body2"/>

        <TextView
            android:id="@+id/flashcards_options"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/option_menu_sign"
            app:layout_constraintTop_toTopOf="@id/term"
            app:layout_constraintBottom_toBottomOf="@id/term"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TextAppearance.MaterialComponents.Body2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>