<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/setsFragment">

    <fragment
        android:id="@+id/setsFragment"
        android:name="com.example.dreamflashcardsapp.fragments.app.SetsFragment"
        android:label="Dream Flashcards"
        tools:layout="@layout/fragment_sets" >
        <action
            android:id="@+id/action_setsFragment_to_createSetFragment"
            app:destination="@id/createSetFragment" />
        <action
            android:id="@+id/action_setsFragment_to_flashcardsFragment"
            app:destination="@id/flashcardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/createSetFragment"
        android:name="com.example.dreamflashcardsapp.fragments.app.CreateSetFragment"
        android:label="Dream Flashcards"
        tools:layout="@layout/fragment_create_set" >
        <action
            android:id="@+id/action_createSetFragment_to_flashcardsFragment"
            app:destination="@id/flashcardsFragment"
            app:restoreState="true"
            app:popUpToSaveState="true"
            app:popUpTo="@id/setsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/flashcardsFragment"
        android:name="com.example.dreamflashcardsapp.fragments.app.FlashcardsFragment"
        android:label="Dream Flashcards"
        tools:layout="@layout/fragment_flashcards" >
        <action
            android:id="@+id/action_flashcardsFragment_to_addFlashcardFragment"
            app:destination="@id/addFlashcardFragment"
            app:restoreState="true"
            app:popUpToSaveState="true"/>
    </fragment>
    <fragment
        android:id="@+id/addFlashcardFragment"
        android:name="com.example.dreamflashcardsapp.fragments.app.AddFlashcardFragment"
        android:label="Dream Flashcards" />
</navigation>